<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Today's order Report</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="container">
      <h1 style="font-size: 25px; padding: 20px 0;">Today's order Report</h1>
      <table style="border: 1px solid #d7d7d7; width: 100%;">
        <thead style="font-size: 16px; background-color: #d7d7d7;">
          <tr style="border-bottom: 1px solid #d7d7d7; width: 100%;">
            <th style="padding: 10px;">Category</th>
            <th style="padding: 10px;">Name</th>
            <th style="padding: 10px;">Quantity</th>
            <th style="padding: 10px;">Rate</th>
            <th style="padding: 10px;">Total Amount</th>
          </tr>
        </thead>
        <tbody style="font-size: 14px;">
          {{#each orders.items}}
            <tr style="border-bottom: 1px solid #d7d7d7; width: 100%; ">
              <th style="padding: 10px;">{{category}}</th>
              <td
                style="padding: 10px; font-size: 14px;font-weight: 400;"
              >{{item_name}}</td>
              <td
                style="padding: 10px; font-size: 14px;font-weight: 400;"
              >{{quantity}}</td>
              <td
                style="padding: 10px; font-size: 14px;font-weight: 400;"
              >{{item_price}}</td>
              <td
                style="padding: 10px; font-size: 14px;font-weight: 400;"
              >{{total}}</td>
            </tr>
          {{/each}}

          <tr style="border-bottom: 1px solid #d7d7d7; width: 100%; ">
            <th style="padding: 10px;"><h3
                style="font-size: 20px; font-weight: 700;"
              >Total</h3></th>
            <td style="padding: 10px; font-size: 14px;font-weight: 400;"></td>
            <td style="padding: 10px; font-size: 14px;font-weight: 400;"><h3
                style="font-size: 20px; font-weight: 700;"
              >{{orders.quantity}}</h3></td>
            <td style="padding: 10px; font-size: 14px;font-weight: 400;"></td>
            <td style="padding: 10px; font-size: 14px;font-weight: 400;"><h3
                style="font-size: 20px; font-weight: 700;"
              >{{orders.total}}</h3></td>
          </tr>

        </tbody>
      </table>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>

  </body>

</html>