<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Monthly Day Wise Order Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>

  <body>

    <div class="container">
      <h1 style="font-size: 25px; padding: 20px 0;">Monthly Day Wise Order
        Details</h1>
      <table class="" style="border: 1px solid #d7d7d7; width: 100%;">
        <thead style="font-size: 16px; background-color: #d7d7d7;">
          <tr style="border-bottom: 1px solid #d7d7d7; width: 100%;">
            <th style="padding: 10px;">Date</th>
            <th style="padding: 10px;">Employee</th>
            <th style="padding: 10px;">Total Order</th>
            <th style="padding: 10px;">Accepted Order</th>
            <th style="padding: 10px;">Difference Amount</th>

          </tr>
        </thead>
        <tbody>
          {{#each orders.data}}
            <tr style="border-bottom: 1px solid #d7d7d7; width: 100%; ">
              <th style="padding: 10px;font-weight:400;" colspan="4">
                {{createdAt}}
              </th>
            </tr>
            {{#each employees}}
              <tr style="border-bottom: 1px solid #d7d7d7; width: 100%; ">
                <td></td>
                <td
                  style="padding: 10px; font-size: 15px;font-weight: 400;"
                >{{employee_name}}</td>
                <td
                  style="padding: 10px; font-size: 15px;font-weight: 400;"
                >{{total}}</td>
                <td
                  style="padding: 10px; font-size: 15px;font-weight: 400;"
                >{{accepted_amount}}</td>
                <td
                  style="padding: 10px; font-size: 15px;font-weight: 400;"
                >{{difference_amount}}</td>
              </tr>
            {{/each}}
          {{/each}}
          <tr style="border-bottom: 1px solid #d7d7d7; width: 100%; ">
            <th style="padding: 10px;"><h3
                style="font-size: 20px; font-weight: 700;"
              >Total</h3></th>
            <td style="padding: 10px; font-size: 14px;font-weight: 400;"></td>
            <td style="padding: 10px; font-size: 14px;font-weight: 400;"><h3
                style="font-size: 20px; font-weight: 700;"
              >{{orders.total}}</h3></td>
            <td style="padding: 10px; font-size: 14px;font-weight: 400;"></td>
            <td style="padding: 10px; font-size: 14px;font-weight: 400;"><h3
                style="font-size: 20px; font-weight: 700;"
              >{{orders.difference_amount}}</h3></td>
          </tr>
        </tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha382-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>

  </body>

</html>